	public In1LoginConstract(JLabel l){
		fra = new JFrame("qq登陆");
		// 只有设置了这个里面的元素定位才起效果
		fra.setLayout(null);
		fra.setSize(500, 300);
		fra.setLocation(400, 300);
		this.l = l;
		fra.add(l);
		fra.setVisible(true);
	}
	
	
	
	
	
