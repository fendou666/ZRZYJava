package JD20170329;

/**
 * 
 * 2.	分别打印空心矩形和空心菱形
 * 
 * @author Administrator
 *
 */


public class J2 {
//	长为m,宽为n
	public void getRectangle(int m, int n){
//		System.out.println("*********");
//		System.out.println("*       *");
//		System.out.println("*       *");
//		System.out.println("*       *");
//		System.out.println("*********");
		for (int i=0;i<n;i++){
		
			if(i==0||i==n-1){
				for(int j=0;j<m;j++){
					System.out.print("*");
				}
			}else{
				for(int k=0;k<m;k++){
					if(k==0||k==m-1){
						System.out.print("*");
					}else{
						System.out.print(" ");
					}
				}
			}
			System.out.print("\n");
		}
	}
	public void getRhombus(){
		System.out.println("   *   ");
		System.out.println(" *   * ");
		System.out.println("*     *");
		System.out.println(" *   * ");
		System.out.println("   *   ");
	}
	
	public static void main(String[] args) {
		J2 j = new J2();
		j.getRectangle(10,20);
		j.getRhombus();
	}
	
	
}
